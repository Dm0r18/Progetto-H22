<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="860.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <HBox prefHeight="600.0" prefWidth="860.0" spacing="50.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="150.0" left="100.0" right="100.0" top="150.0" />
        </padding>
        <VBox alignment="CENTER" spacing="20.0">
            <HBox alignment="CENTER_RIGHT" spacing="5.0">
                <Label text="ID" textFill="WHITE">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="email" cacheShape="false" prefWidth="250.0" promptText="example@domain.com">
                    <font>
                        <Font name="Verdana" size="15.0" />
                    </font>
                </TextField>
            </HBox>
            <Label fx:id="errLabel" alignment="CENTER" contentDisplay="CENTER" textAlignment="CENTER" textFill="#f8dd94">
                <font>
                    <Font name="Verdana" size="14.0" />
                </font>
            </Label>
            <HBox alignment="CENTER_RIGHT" spacing="5.0">
                <Label text="Password" textFill="WHITE">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Label>
                <PasswordField fx:id="pwd" onAction="#login" prefWidth="250.0" promptText="password">
                    <font>
                        <Font name="Verdana" size="15.0" />
                    </font>
                </PasswordField>
            </HBox>
        </VBox>
        <VBox alignment="CENTER" spacing="30.0">
            <JFXButton defaultButton="true" onAction="#login" prefHeight="65.0" prefWidth="250.0" text="LOGIN" textFill="WHITE">
                <font>
                    <Font name="Verdana Bold" size="24.0" />
                </font>
            </JFXButton>
            <JFXButton onAction="#register" prefHeight="65.0" prefWidth="250.0" text="REGISTRATI" textFill="WHITE">
                <font>
                    <Font name="Verdana Bold" size="24.0" />
                </font>
            </JFXButton>
        </VBox>
    </HBox>
    <JFXButton layoutX="577.0" layoutY="14.0" onAction="#support" prefHeight="65.0" prefWidth="250.0" text="ASSISTENZA" textFill="WHITE" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="20.0">
        <font>
            <Font name="Verdana Bold" size="24.0" />
        </font>
    </JFXButton>
</AnchorPane>
