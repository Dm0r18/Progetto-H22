<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="350.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PaymentController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Pagamento" wrapText="true">
               <font>
                  <Font name="Berlin Sans FB" size="26.0" />
               </font>
            </Label>
            <Label ellipsisString="" layoutX="30.0" layoutY="20.0" text="Compilare tutti i campi prima di procedere" wrapText="true">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="13.0" />
               </font>
            </Label>
            <Label text="Numero della Carta">
               <padding>
                  <Insets top="10.0" />
               </padding>
            </Label>
            <TextField fx:id="cardNumber" />
            <Label text="Nome sulla Carta">
               <padding>
                  <Insets top="10.0" />
               </padding>
            </Label>
            <TextField fx:id="cardName" />
            <HBox spacing="10.0">
               <children>
                  <VBox maxWidth="1.7976931348623157E308" minWidth="140.0" prefWidth="120.0">
                     <children>
                        <Label text="Data Scadenza" />
                        <HBox>
                           <children>
                              <ChoiceBox fx:id="expiryMonth" prefHeight="26.0" prefWidth="76.0" />
                              <TextField fx:id="expiryYear" prefHeight="26.0" prefWidth="70.0" />
                           </children>
                        </HBox>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="CVV" />
                        <TextField fx:id="cvv" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <StackPane>
               <children>
                  <JFXButton onAction="#execute" prefHeight="50.0" prefWidth="210.0" text="ACQUISTA">
                     <StackPane.margin>
                        <Insets />
                     </StackPane.margin>
                  </JFXButton>
               </children>
               <padding>
                  <Insets top="30.0" />
               </padding>
            </StackPane>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" top="30.0" />
         </padding>
      </VBox>
      <JFXButton onAction="#cancel" text="Cancella" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0" />
   </children>
</AnchorPane>
