<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import model.booking.ClassType?>

<AnchorPane prefHeight="600.0" prefWidth="860.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ResultController">
   <children>
      <VBox AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="60.0" AnchorPane.rightAnchor="60.0" AnchorPane.topAnchor="50.0">
         <children>
            <HBox alignment="CENTER" prefHeight="300.0" spacing="60.0">
               <children>
                  <VBox prefWidth="355.0" spacing="10.0">
                     <children>
                        <Label fx:id="depLabel" alignment="TOP_LEFT" prefHeight="40.0" prefWidth="340.0" text="Andata" wrapText="true" />
                        <TableView fx:id="table1" prefHeight="250.0">
                          <columns>
                            <TableColumn fx:id="flightNumber1" editable="false" prefWidth="85.0" resizable="false" sortable="false" text="Numero Volo" />
                            <TableColumn fx:id="scheduledTime1" editable="false" prefWidth="85.0" resizable="false" text="Partenza" />
                              <TableColumn fx:id="arrivalTime1" editable="false" prefWidth="85.0" resizable="false" text="Arrivo" />
                              <TableColumn fx:id="price1" editable="false" prefWidth="83.0" resizable="false" text="Price" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </VBox>
                  <VBox prefWidth="355.0" spacing="10.0">
                     <children>
                        <Label fx:id="retLabel" alignment="TOP_LEFT" prefHeight="40.0" prefWidth="340.0" text="Ritorno" />
                        <TableView fx:id="table2" prefHeight="250.0">
                           <columns>
                              <TableColumn fx:id="flightNumber2" editable="false" prefWidth="85.0" resizable="false" sortable="false" text="Numero Volo" />
                              <TableColumn fx:id="scheduledTime2" editable="false" prefWidth="85.0" resizable="false" text="Partenza" />
                              <TableColumn fx:id="arrivalTime2" editable="false" prefWidth="85.0" resizable="false" text="Arrivo" />
                              <TableColumn fx:id="price2" editable="false" prefWidth="83.0" resizable="false" text="Price" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" fillHeight="false" prefHeight="200.0">
               <children>
                  <Label prefWidth="65.0" text="Selezionare Classe:" textAlignment="CENTER" wrapText="true" />
                  <VBox prefWidth="111.0">
                     <children>
                        <JFXToggleButton alignment="CENTER_LEFT" graphicTextGap="2.0" size="7.0" text="FIRST">
                           <toggleGroup>
                              <ToggleGroup fx:id="group" />
                           </toggleGroup>
                           <userData>
                              <ClassType fx:constant = "FIRST" />
                           </userData>
                        </JFXToggleButton>
                        <JFXToggleButton alignment="CENTER_LEFT" graphicTextGap="2.0" size="7.0" text="BUSINESS" toggleGroup="$group">
                            <userData>
                                <ClassType fx:constant = "BUSINESS" />
                            </userData>
                        </JFXToggleButton>
                        <JFXToggleButton alignment="CENTER_LEFT" graphicTextGap="2.0" selected="true" size="7.0" text="ECONOMY" toggleGroup="$group">
                            <userData>
                                <ClassType fx:constant = "ECONOMY" />
                            </userData>
                        </JFXToggleButton>
                     </children>
                  </VBox>
                  <VBox prefHeight="84.0" prefWidth="325.0" spacing="10.0">
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <VBox prefWidth="153.0">
                                 <children>
                                    <Label text="Nome" />
                                    <TextField fx:id="name" />
                                 </children>
                              </VBox>
                              <VBox prefWidth="153.0">
                                 <children>
                                    <Label text="Cognome" />
                                    <TextField fx:id="surname" />
                                 </children>
                              </VBox>
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </HBox>
                        <VBox alignment="CENTER">
                           <children>
                              <Label text="Data di Nascita" />
                              <DatePicker fx:id="birthDate" onAction="#ageCheck" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox alignment="CENTER" spacing="20.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Costo:   â‚¬">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </Label>
                              <Label fx:id="costLabel" alignment="CENTER" contentDisplay="CENTER" >
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </Label>
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </HBox>
                        <JFXButton onAction="#checkout" prefHeight="50.0" prefWidth="200.0" text="ACQUISTA" textAlignment="CENTER">
                           <font>
                              <Font name="Comic Sans MS" size="15.0" />
                           </font>
                        </JFXButton>
                        <Label fx:id="errLabel" text="Completare prima tutti i campi!" textFill="RED" visible="false" />
                     </children>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
