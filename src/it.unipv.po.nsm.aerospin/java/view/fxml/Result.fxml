<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import model.booking.passenger.ClassType?>

<AnchorPane prefHeight="600.0" prefWidth="860.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ResultController">
   <children>
      <HBox layoutX="68.0" layoutY="75.0" prefHeight="346.0" prefWidth="725.0" spacing="20.0">
         <children>
            <VBox prefHeight="346.0" prefWidth="410.0">
               <children>
                  <Label fx:id="depLabel" alignment="TOP_LEFT" prefHeight="40.0" prefWidth="400.0" text="Andata" />
                  <TableView fx:id="table1" prefHeight="220.0" prefWidth="280.0">
                    <columns>
                      <TableColumn fx:id="flightNumber1" editable="false" resizable="false" sortable="false" text="Numero Volo" />
                      <TableColumn fx:id="scheduledTime1" editable="false" prefWidth="67.0" resizable="false" text="Partenza" />
                        <TableColumn fx:id="arrivalTime1" prefWidth="67.0" resizable="false" text="Arrivo" />
                        <TableColumn fx:id="price1" prefWidth="64.0" resizable="false" text="Costo €" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
            <VBox prefHeight="346.0" prefWidth="474.0">
               <children>
                  <Label fx:id="retLabel" alignment="TOP_LEFT" prefHeight="40.0" prefWidth="400.0" text="Ritorno" />
                  <TableView fx:id="table2" prefHeight="220.0" prefWidth="349.0">
                     <columns>
                        <TableColumn fx:id="flightNumber2" editable="false" resizable="false" sortable="false" text="Numero Volo" />
                        <TableColumn fx:id="scheduledTime2" editable="false" prefWidth="67.0" resizable="false" text="Partenza" />
                        <TableColumn fx:id="arrivalTime2" prefWidth="67.0" resizable="false" text="Arrivo" />
                        <TableColumn fx:id="price2" prefWidth="64.0" resizable="false" text="Costo €" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </HBox>
      <JFXButton layoutX="596.0" layoutY="401.0" onAction="#checkout" prefHeight="65.0" prefWidth="222.0" text="ACQUISTA" />
      <VBox layoutX="303.0" layoutY="483.0" prefHeight="65.0" prefWidth="453.0">
         <children>
            <HBox prefHeight="17.0" prefWidth="190.0" spacing="120.0">
               <children>
                  <Label text="Nome" />
                  <Label text="Cognome" />
                  <Label text="Data di Nascita" />
               </children>
            </HBox>
            <HBox spacing="20.0">
               <children>
                  <TextField fx:id="name" />
                  <TextField fx:id="surname" />
                  <DatePicker fx:id="birthDate" onAction="#ageCheck" prefHeight="25.0" prefWidth="131.0" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox layoutX="229.0" layoutY="384.0" prefHeight="100.0" prefWidth="342.0">
         <children>
            <Label text="Seleziona la Classe:" />
            <VBox prefHeight="100.0" prefWidth="113.0" spacing="5.0">
               <children>
                  <JFXToggleButton text="FIRST">
                     <toggleGroup>
                        <ToggleGroup fx:id="group"/>
                     </toggleGroup>
                     <userData>
                        <ClassType fx:constant = "FIRST" />
                     </userData>
                  </JFXToggleButton>
                  <JFXToggleButton text="BUSINESS" toggleGroup="$group" >
                     <userData>
                        <ClassType fx:constant = "BUSINESS" />
                     </userData>
                  </JFXToggleButton>
                  <JFXToggleButton selected="true" text="ECONOMY" toggleGroup="$group" >
                     <userData>
                        <ClassType fx:constant = "ECONOMY" />
                     </userData>
                  </JFXToggleButton>
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox layoutX="68.0" layoutY="495.0" prefHeight="53.0" prefWidth="137.0">
         <children>
            <Label text="Costo:   €" />
            <Label fx:id="costLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="45.0" prefWidth="68.0" />
         </children>
      </HBox>
   </children>
</AnchorPane>
